<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="cursive"
        android:text="@string/killer_sudoku_combos"
        android:textColor="#881010"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutGridSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <TextView
            android:id="@+id/txtViewGridSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_size"
            android:textSize="18sp"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_editor_absoluteY="108dp"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_conversion_absoluteWidth="75dp" />

        <Spinner
            android:id="@+id/spinnerGridSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="24dp"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_editor_absoluteY="108dp"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_conversion_absoluteWidth="48dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutCage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutGridSize">

        <LinearLayout
            android:id="@+id/linearLayoutCageSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutGridSize">

            <TextView
                android:id="@+id/textViewCageSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cage_sum"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="154dp" />

            <EditText
                android:id="@+id/editTextCageSum"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:autofillHints="Enter Cage Sum"
                android:ems="10"
                android:hint="@string/enter_cage_sum"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
            <TextView
                android:id="@+id/textViewCageSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cage_size"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="154dp" />

            <EditText
                android:id="@+id/editTextCageSize"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:autofillHints="Enter Cage Sum"
                android:ems="10"
                android:hint="@string/enter_cage_size"
                android:maxLength="2"
                android:maxLines="1"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewResults"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCage"
        tools:layout_editor_absoluteX="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>